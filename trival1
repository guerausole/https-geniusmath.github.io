        // Afegir esdeveniments
        document.getElementById('nova-pregunta').addEventListener('click', () => {
            if (!respostaSeleccionada) {
                obtenirPreguntaAleatoria();
            }
        });

        document.getElementById('següent').addEventListener('click', () => {
            document.getElementById('següent').style.display = 'none';
            respostaSeleccionada = false;
            canviarTorn();
        });

        // Funcions del joc
        function obtenirPreguntaAleatoria() {
            // Obtenir totes les categories
            const categories = Object.keys(preguntes);
            // Triar una categoria aleatòria
            const categoriaAleatoria = categories[Math.floor(Math.random() * categories.length)];
            
            const preguntesCategoria = preguntes[categoriaAleatoria];
            let index;
            
            // Trobar una pregunta no utilitzada
            do {
                index = Math.floor(Math.random() * preguntesCategoria.length);
            } while (preguntesUtilitzades.includes(`${categoriaAleatoria}-${index}`) && preguntesUtilitzades.length < preguntesCategoria.length);
            
            // Si s'han utilitzat totes, reiniciar
            if (preguntesUtilitzades.length >= preguntesCategoria.length) {
                preguntesUtilitzades = [];
            }
            
            preguntesUtilitzades.push(`${categoriaAleatoria}-${index}`);
            
            const pregunta = preguntesCategoria[index];
            mostrarPregunta(pregunta, categoriaAleatoria);
        }

        function mostrarPregunta(pregunta, categoria) {
            document.getElementById('pregunta').textContent = pregunta.pregunta;
            document.getElementById('categoria-pregunta').textContent = categoria.charAt(0).toUpperCase() + categoria.slice(1);
            document.getElementById('categoria-pregunta').className = 'categoria-pregunta ' + categoria;
            
            const respostesDiv = document.getElementById('respostes');
            respostesDiv.innerHTML = '';
            
            pregunta.respostes.forEach((resposta, i) => {
                const respostaDiv = document.createElement('div');
                respostaDiv.className = 'resposta';
                respostaDiv.textContent = resposta;
                respostaDiv.addEventListener('click', () => {
                    if (!respostaSeleccionada) {
                        respostaSeleccionada = true;
                        comprovarResposta(i, pregunta.correcta, respostaDiv);
                    }
                });
                respostesDiv.appendChild(respostaDiv);
            });
            
            document.getElementById('pregunta-container').style.display = 'block';
        }

        function comprovarResposta(respostaIndex, correctaIndex, elementResposta) {
            if (respostaIndex === correctaIndex) {
                elementResposta.classList.add('correcte');
                document.getElementById('missatge').textContent = 'Resposta correcta!';
                sumarPunts();
            } else {
                elementResposta.classList.add('incorrecte');
                document.getElementById('missatge').textContent = 'Resposta incorrecta!';
                
                // Mostrar la resposta correcta
                const respostes = document.querySelectorAll('.resposta');
                respostes[correctaIndex].classList.add('correcte');
            }
            
            document.getElementById('següent').style.display = 'block';
        }

        function sumarPunts() {
            if (jugadorActual === 1) {
                puntsJugador1++;
                document.getElementById('punts-jugador1').textContent = puntsJugador1;
            } else {
                puntsJugador2++;
                document.getElementById('punts-jugador2').textContent = puntsJugador2;
            }
        }

        function canviarTorn() {
            jugadorActual = jugadorActual === 1 ? 2 : 1;
            
            if (jugadorActual === 1) {
                document.getElementById('torn-jugador1').className = 'torn-actiu';
                document.getElementById('torn-jugador1').textContent = 'És el teu torn!';
                document.getElementById('torn-jugador2').className = '';
                document.getElementById('torn-jugador2').textContent = '';
            } else {
                document.getElementById('torn-jugador2').className = 'torn-actiu';
                document.getElementById('torn-jugador2').textContent = 'És el teu torn!';
                document.getElementById('torn-jugador1').className = '';
                document.getElementById('torn-jugador1').textContent = '';
            }
            
            document.getElementById('missatge').textContent = '';
        }
    </script>
</body>
</html>
